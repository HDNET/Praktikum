<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Praktikum</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('style.css') }}">
    {% endblock %}

    {% block javascripts %}
        <script>

        </script>
    {% endblock %}
    <style>
        .card {
            background-color: rgb(var(--color-primary-dark));
        }

        .card-content {
            padding: 24px;
            color: rgb(var(--color-primary-lighter));
        }
    </style>
</head>
<body>
{% block body %}
    <div class="card">
        <div class="card-content">
            {% if item.icon is defined %}
                <img src="{{ asset(item.icon)  }}" width="60px">
            {% endif %}
            <h3>{{ item.headline }} </h3>
            <p> {{ item.content }}</p>
        </div>
    </div>
{% endblock %}
</body>
</html>