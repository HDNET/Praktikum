{% block style %}
    <style>
        .contact {
            background-color: rgb(var(--color-primary-darker));
            padding: 80px;
            min-height: calc(100vh - 160px);
        }

        .contact .btn {
            width: 100%;
            font-family: var(--font-family-base);
            font-weight: var(--font-bold);
            text-transform: uppercase;
            color: rgb(var(--color-primary-darker));
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: inline-block;
            padding: 0 0.5rem;
            margin-left: 0.5rem;
            background-color: rgb(var(--color-primary-darker));
            font-family: var(--font-family-base);
            color: rgb(var(--color-primary-lighter));
            font-weight: var(--font-normal);
            font-size: 80%;
        }

        .form-control {
            display: block;
            width: 100%;
            padding-top: 0.375rem;
            padding-bottom: 0.375rem;
            padding-left: 0.75rem;
            margin-top: -0.6rem;
            color: rgb(var(--color-primary-normal));
            background-color: rgb(var(--color-primary-darker));
            font-family: var(--font-family-base);
            font-weight: var(--font-normal);
            font-size: 1rem;
            line-height: 1.5;
            border: 1px solid rgb(var(--color-primary-normal));
            border-radius: 0.25rem;
            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }
        .form-control:focus {
            border: 1px solid rgb(var(--color-primary-lighter));
        }
        .form-group input:focus, .form-group textarea:focus, .form-group select:focus {
            outline: none;
        }
        .form-group button {
            cursor: pointer;
        }

        .form-control.is-invalid {
            border-color: #dc3545;
        }
        .d-block {
            display: block !important;
        }
        .invalid-feedback {
            display: none;
            width: 100%;
            margin-top: 0.25rem;
            font-family: var(--font-family-base);
            font-weight: var(--font-normal);
            font-size: 80%;
            color: #dc3545;
        }
        .badge {
            display: inline-block;
            padding: .25em .4em;
            font-family: var(--font-family-base);
            font-weight: var(--font-normal);
            font-size: 75%;
            line-height: 1;
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
            border-radius: .25rem;
        }
        .badge-danger {
            color: #fff;
            background-color: #dc3545;
        }

        @media screen and (max-width: 650px) {
            .contact {
                min-height: max-content !important;
                padding: 16px;
            }
        }

        .contact-heading {
            margin-bottom: 4rem;
        }
        .contact-element {
            max-width: 1024px;
            display: grid;
            grid-template-columns: 30% auto;
            grid-gap: 8px;
        }
        .contact-form {
            width: auto;
            padding: 0 32px;
        }

        @media screen and (max-width: 1020px) {
            .contact-element {
                display: flex;
                flex-direction: column;
            }
            .contact-text {
                margin-bottom: 4rem;
            }
            .contact-form {
                padding: 0;
            }
        }

        @media screen and (max-width: 650px){
            .contact {
                min-height: max-content !important;
                padding: 16px;
            }
            .contact-form {
                padding: 0;
            }
            .contact-text {
                padding: 0 16px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<section id="contact" class="contact">
    <h2 class="bold color-primary-light contact-heading">KONTAKT</h2>
    <div class="contact-element">
        <span class="contact-text">
            <p class="light color-primary-normal">
                Hier k√∂nnen Sie in Kontakt mit mir treten:
            </p>
        </span>
        <span class="contact-form">
            {% form_theme form 'form/contact_form.html.twig' %}
            {{ form(form) }}

            {% include 'components/flash_message.html.twig' with {'id': 'contact'} %}
        </span>
    </div>
</section>
{% endblock %}
