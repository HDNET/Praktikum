{% block javascripts %}
    <script>
        window.addEventListener('load', () => {
            const inputs = document.getElementById('form').getElementsByClassName('form-control');
            for (let input of inputs) {
                const eventHandler = (event) => {
                    const label = event.target.parentNode.querySelector('label');
                    label.classList.toggle('form-group-label-focus');
                };
                input.addEventListener('focusin', eventHandler);
                input.addEventListener('focusout', eventHandler);
            }
        })
    </script>
{% endblock %}

{% block style %}
    <style>
        .form-group .btn {
            width: 100%;
            font-family: var(--font-family-base);
            font-weight: var(--font-bold);
            text-transform: uppercase;
            color: rgb(var(--color-primary-darker));
            margin-top: 1rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: inline-block;
            padding: 0 0.5rem;
            margin-left: 0.5rem;
            background-color: rgb(var(--color-primary-darker));
            font-family: var(--font-family-base);
            color: rgb(var(--color-primary-lighter));
            font-weight: var(--font-light);
            position: relative;
            top: 30px;
            transition: top .2s ease-in-out, font-size .2s ease-in-out;
            text-transform: uppercase;
        }

        .form-group-label-focus {
            font-size: 80%;
            top: 11px !important;
        }

        .form-control {
            display: block;
            box-sizing: border-box;
            width: 100%;
            padding-top: 0.375rem;
            padding-bottom: 0.375rem;
            padding-left: 0.75rem;
            color: rgb(var(--color-primary-normal));
            background-color: rgb(var(--color-primary-darker));
            font-family: var(--font-family-base);
            font-weight: var(--font-light);
            font-size: 1rem;
            line-height: 1.5;
            border: 1px solid rgb(var(--color-primary-normal));
            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }
        .form-control:focus {
            border: 1px solid rgb(var(--color-primary-lighter));
            transition: border .2s ease-in-out;
        }
        .form-group input:focus, .form-group textarea:focus, .form-group select:focus {
            outline: none;
        }
        .form-group button {
            cursor: pointer;
        }

        .form-control.is-invalid {
            border-color: #dc3545;
        }
        .d-block {
            display: block !important;
        }
        .invalid-feedback {
            display: none;
            width: 100%;
            margin-top: 0.25rem;
            font-family: var(--font-family-base);
            font-weight: var(--font-light);
            font-size: 80%;
            color: #dc3545;
        }
        .badge {
            display: inline-block;
            padding: .25em .4em;
            font-family: var(--font-family-base);
            font-weight: var(--font-light);
            font-size: 75%;
            line-height: 1;
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
            border-radius: .25rem;
        }
        .badge-danger {
            color: #fff;
            background-color: #dc3545;
        }
    </style>
{% endblock %}
